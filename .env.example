# Mission Control Bot - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# DISCORD (Required)
# =============================================================================

# Bot token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_bot_token

# Server (Guild) ID
DISCORD_GUILD_ID=826115122799837205

# Channel where mission posts live (threads are created here)
DISCORD_MISSION_CHANNEL_ID=1308506959032488067

# Comma-separated list of role IDs that can judge
DISCORD_JUDGE_ROLE_IDS=1351377449744728105

# =============================================================================
# GOOGLE SHEETS (Required)
# =============================================================================

# Spreadsheet ID for exports
GOOGLE_SPREADSHEET_ID=1VyzW81DszWDNUNoJxnIw79mMk0aQrlTGAHHb9NWXFOE

# Service account email (from Google Cloud Console)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Private key (from service account JSON, keep the quotes, replace actual newlines with \n)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# =============================================================================
# TELEGRAM (Optional - for status commands)
# =============================================================================

# Bot token from @BotFather (leave empty to disable Telegram)
TELEGRAM_BOT_TOKEN=

# Allowed chat IDs (comma-separated)
TELEGRAM_ALLOWED_CHAT_IDS=-5226358270

# Announcement channel ID (optional - where missions are posted for submissions)
TELEGRAM_ANNOUNCEMENT_CHANNEL_ID=

# =============================================================================
# NOTION & CLAUDE (Optional - for /mission and /tweets commands)
# =============================================================================

# Anthropic API key for Claude
ANTHROPIC_API_KEY=

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Notion integration token
NOTION_TOKEN=

# Notion campaigns database ID
